<h1>書籍一覧</h1>

<% if admin_signed_in? %>
    <%= link_to "新規登録", books_new_path %>
<% end %>

<% @books.each do |book| %>
    <div>
        <p>書籍名: <%= book.book_name %></p>
        <p>著作名: <%= book.author_name%></p>
        <p>発行日: <%= book.issue_date %></p>
        <p>商品表示: <%= book.product_display %></p>
        <p>価格: <%= book.price %>円</p>
        <p>ステータス: <%= book.status %></p>
        <% if admin_signed_in? || user_signed_in? %>
            <%= link_to "詳細", book_path(book.id) %>
        <% end %>
    </div>
    <hr>
<% end %>

<% if session[:cart_id] %>
    <br>
    <%= link_to "買い物かごを見る", cart_path(session[:cart_id]) %>
<% end %>

